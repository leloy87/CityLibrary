@model CityLibrary.Models.Borrower

@{
    ViewData["Title"] = "Create Borrower";
}

<!-- Page Container -->
<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <!-- Create Borrower Form -->
    <form asp-action="Create" class="form-container">
        <div class="form-group mb-3">
            <label asp-for="FirstName" class="form-label"></label>
            <input asp-for="FirstName" class="form-control" />
        </div>
        <div class="form-group mb-3">
            <label asp-for="LastName" class="form-label"></label>
            <input asp-for="LastName" class="form-control" />
        </div>
        <div class="form-group mb-3">
            <label asp-for="BooksBorrowed" class="form-label"></label>
            <input asp-for="BooksBorrowed" class="form-control" />
        </div>
        <div class="form-group mb-3">
            <label asp-for="RatePerBook" class="form-label"></label>
            <input asp-for="RatePerBook" class="form-control" />
        </div>
        <div class="button-group mt-3">
            <button type="submit" class="btn btn-primary btn-lg">Create</button>
            <a asp-action="Index" class="btn btn-secondary btn-lg ms-3">Back to List</a>
        </div>
    </form>
</div>

<!-- Custom CSS for additional styling -->
<style>
    /* Form Container Styling */
    .form-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #dee2e6;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Form Group Styling */
    .form-group {
        margin-bottom: 1.5rem;
    }

    /* Form Label Styling */
    .form-label {
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    /* Button Styling */
    .btn-lg {
        padding: 10px 20px;
        font-size: 18px;
        border-radius: 50px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition: background-color 0.3s, box-shadow 0.3s;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #4e555b;
        }

    /* Button Group Styling */
    .button-group {
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .button-group .btn {
            margin: 0 0.5rem;
        }
</style>
