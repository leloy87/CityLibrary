@model CityLibrary.Models.Borrower

@{
    ViewData["Title"] = "Delete Borrower";
}

<h2>Delete Borrower</h2>

<div>
    <h4>Are you sure you want to delete this borrower?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>
        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.LastName</dd>
        <dt class="col-sm-2">Books Borrowed</dt>
        <dd class="col-sm-10">@Model.BooksBorrowed</dd>
        <dt class="col-sm-2">Total Amount Due</dt>
        <dd class="col-sm-10">@Model.Total</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="partitionKey" value="@Model.PartitionKey" />
    <input type="hidden" name="rowKey" value="@Model.RowKey" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

